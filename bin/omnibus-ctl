require 'omnibus-ctl'

# service name: ARGV[0]
# additional modules: ARGV[1]
# command: ARGV[2]
# service: ARGV[3]
# options: ARGV[4..]

ctl = Omnibus::Ctl.new(ARGV[0])
ctl.load_files(ARGV[1])
arguments = ARGV[2..-1] # Get the rest of the command line arguments
ctl.run(arguments)
exit 0

